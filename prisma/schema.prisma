generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  role UserRole @default(USER)
  email String @unique
  pass_hash String
  name String
  phone_number String @unique
  followedProducts Product[]
  orders Order[]
}

model Category {
  id Int @id @default(autoincrement())
  name String @unique
  products Product[]
}

model Product {
  id Int @id @default(autoincrement())
  name String @default("Default product name")
  price Float
  rating Int?
  description String
  createdAt DateTime @default(now())
  category Category? @relation(fields: [categoryName], references: [name])
  categoryName String?
  users User[]
  orders Order[]
}

model Order {
  id Int @id @default(autoincrement())
  quantity Int
  status OrderStatus
  user User @relation(fields: [userId], references: [id])
  userId Int
  product Product @relation(fields: [productId], references: [id])
  productId Int
}

enum OrderStatus {
  PACKING
  SHIPPING
  ARRIVED
}

enum UserRole {
  USER
  ADMIN
}